{
    "name": "ameotoko/stripe-bundle",
    "type": "contao-bundle",
    "description": "Simple Stripe controller for Contao 5",
    "license": "LGPL-3.0-or-later",
    "authors": [
        {
            "name": "Andrey Vinichenko",
            "homepage": "https://github.com/ameotoko"
        }
    ],
    "require": {
        "php": "^8.1",
        "contao/core-bundle": "^5.0",
        "stripe/stripe-php": "^7.67"
    },
    "conflict": {
        "contao/manager-plugin": "<2.0 || >=3.0"
    },
    "require-dev": {
        "contao/manager-plugin": "^2.0"
    },
    "extra": {
        "contao-manager-plugin": "Ameotoko\\StripeBundle\\ContaoManager\\Plugin"
    },
    "autoload": {
        "psr-4": {
            "Ameotoko\\StripeBundle\\": "src/"
        }
    },
    "support": {
        "issues": "https://github.com/ameotoko/stripe-bundle/issues",
        "source": "https://github.com/ameotoko/stripe-bundle"
    }
}
